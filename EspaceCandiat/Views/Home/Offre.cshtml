@{
    ViewData["Title"] = "Postuler";
}
<h1>@ViewData["Title"]</h1>

<div class="col-8 mx-auto">
    <ul class="form-stepper form-stepper-horizontal text-center mx-auto pl-0">
        <!-- Step 1 -->
        <li class="form-stepper-active text-center form-stepper-list" step="1">
            <a class="mx-2">
                <span class="form-stepper-circle">
                    <span>1</span>
                </span>
                <div class="label">Informations</div>
            </a>
        </li>
        <!-- Step 2 -->
        <li class="form-stepper-unfinished text-center form-stepper-list" step="2">
            <a class="mx-2">
                <span class="form-stepper-circle text-muted">
                    <span>2</span>
                </span>
                <div class="label text-muted">CV</div>
            </a>
        </li>
        <!-- Step 3 -->
        <li class="form-stepper-unfinished text-center form-stepper-list" step="3">
            <a class="mx-2">
                <span class="form-stepper-circle text-muted">
                    <span>3</span>
                </span>
                <div class="label text-muted">Confirmation</div>
            </a>
        </li>
    </ul>
  

    <form id="ApplyFromStep" name="ApplyFromStep" enctype="multipart/form-data" method="POST">
        @Html.AntiForgeryToken()
        <!-- Step 1 Content-->
        <section id="step-1" class="form-step">
            <div class="container">
                <h2>Candidature</h2>
                    <div class="form-group">
                        <label for="nom">Nom:</label>
                        <input type="text" class="form-control" id="nom" placeholder="Entrez votre nom" name="nom">
                    </div>
                    <div class="form-group">
                        <label for="prenom">Prénom:</label>
                        <input type="text" class="form-control" id="prenom" placeholder="Entrez votre prénom" name="prenom">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Entrez votre email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="tel">Téléphone:</label>
                        <input type="tel" class="form-control" id="tel" placeholder="Entrez votre numéro de téléphone" name="telephone">
                    </div>
                    <div class="form-group">
                        <label for="etude">Niveau d'étude:</label>
                    <select class="form-control" id="etude" name="niveauetude">
                            <option>Bac</option>
                            <option>Bac +2</option>
                            <option>Bac +3</option>
                            <option>Bac +5</option>
                            <option>Doctorat</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="experience">Nombre d'années d'expérience:</label>
                    <input type="number" class="form-control" id="experience" placeholder="Entrez votre nombre d'années d'expérience" name="anneesexperience">
                    </div>
                    <div class="form-group">
                        <label for="employeur">Dernier employeur:</label>
                    <input type="text" class="form-control" id="employeur" placeholder="Entrez le nom de votre dernier employeur" name="dernieremployeur">
                    </div>
            </div>

            <div class="mt-3">
                <button class="button btn-navigate-form-step" type="button" step_number="2">Next</button>
            </div>
        </section>
        <!-- Step 2 Content-->
        <section id="step-2" class="form-step d-none">
            <div class="form-group">
                <label for="cv">Téléchargez votre CV:</label>
                <input type="file" class="form-control-file" id="cv" name="cv" accept=".pdf,.jpeg,.jpg,.png">
            </div>
            <div class="mt-3">
                <button class="button btn-navigate-form-step" type="button" step_number="1">Prev</button>
                <button class="button btn-navigate-form-step" type="button" step_number="3">Next</button>
            </div>
        </section>
        <!-- Step 3 Content-->
        <section id="step-3" class="form-step d-none">
            <h2 class="font-normal">Confimation</h2>

            <div class="mt-3" id="message"></div>

            <div class="mt-3">
                <button class="button btn-navigate-form-step" type="button" step_number="2">Prev</button>
                <button class="button submit-btn" id="submitForm" type="submit">Save</button>
            </div>
        </section>
    </form>
</div>

